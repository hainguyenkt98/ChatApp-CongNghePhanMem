@model ChatApp.Models.ChangePasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConfirmEmail</title>
    <link href="~/Assets/CSS/bootstrap.min.css" rel="stylesheet" />
    <!-- Latest compiled JavaScript -->
    <script src="~/Assets/JS/bootstrap.min.js"></script>
    <link href="~/Assets/CSS/layout.css" rel="stylesheet" />
    <link href="~/Assets/Fontawesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="header">
            <div class="header-inner">
                <span id="slogan">Miễn phí cho đến khi phải trả phí</span>
            </div>
        </div>
        <div class="web-body">
            <div class="reg-form">
                @using (Html.BeginForm("ChangePassword", "Forget", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", "error");

                    <div class="form-group has-feedback">
                        <span class="form-control-feedback"><i class="fas fa-envelope"></i></span>
                        @Html.PasswordFor(Model => Model.NewPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Mật khẩu mới", @id = "newpassword" })
                        @Html.ValidationMessageFor(Model => Model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group has-feedback">
                        <span class="form-control-feedback"><i class="fas fa-envelope"></i></span>
                        @Html.PasswordFor(Model => Model.NewPasswordConfirm, htmlAttributes: new { @class = "form-control", @placeholder = "Nhập lại mật khẩu mới", @id = "confirmnewpassword" })
                        @Html.ValidationMessageFor(Model => Model.NewPasswordConfirm, "", new { @class = "text-danger" })
                    </div>
                    <button style="margin-top: 5px" type="submit" class="btn btn-primary" id="btn-signup">Xác nhận</button>
                }
            </div>
        </div>
        <div class="footer">
            <div class="footer-inner">
                Copyright © 2013 HKT <br>
                Đơn vị chủ quản: HKT Corporation. Giấy phép ICP số: 41/GP-TTĐT.
            </div>
        </div>
    </div>
</body>
</html>
